<Application x:Class="hello.streamingaudio.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:streamingaudio="clr-namespace:hello.streamingaudio">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <!-- cf: https://github.com/brendankowitz/Caliburn.Micro.Autofac/blob/master/samples/Sample-WPF/App.xaml -->
                    <streamingaudio:AppBootstrapper x:Key="AppBootstrapper" />

                    <Style TargetType="Button">
                        <Setter Property="Width" Value="80" />
                        <Setter Property="Height" Value="24" />
                        <Setter Property="Margin" Value="8" />
                    </Style>

                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
